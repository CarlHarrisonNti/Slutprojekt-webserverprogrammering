<form action="/exercises/<%= @id %>/solutions/<%= @solution["solution_id"]  %>/update" method="post" enctype="multipart/form-data">
  <div class="flex flex-col items-center justify-center space-y-6">
    <h1 class="text-4xl font-bold text-white mt-10">Update Solution</h1>
    <div class="flex flex-col items-center justify-center">
      <label for="solution_file" class="text-xl font-bold text-white"
        >Solution File (.rb file)</label
      >
      <input
        type="file"
        id="solution_file"
        name="solution_file"
        class="border-2 bg-white my-2 border-indigo-900 rounded-lg w-64 p-2 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100 block text-sm text-slate-500"
      />
    </div>
    <div class="flex flex-col items-center justify-center my-3">
      <input
        type="submit"
        class="bg-indigo-900 text-white rounded-lg w-64 p-2"
      />
    </div>
  </div>
</form>
