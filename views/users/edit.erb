
<form action="/users/<%= @user["id"] %>/update" method="post">
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-4xl font-bold text-white m-10">Update Users</h1>
        <div class="flex flex-col items-center justify-center">
            <label for="email" class="text-xl font-bold text-white">Email</label>
            <input type="email" name="email" id="email" class="border-2 border-indigo-900 rounded-lg w-64 p-2" value="<%= @user["Email"]%>">
        </div>
        <div class="flex flex-col items-center justify-center">
            <label for="password" class="text-xl font-bold text-white">Password</label>
            <input type="password" name="password" id="password" class="border-2 border-indigo-900 rounded-lg w-64 p-2" >
        </div>
        <div class="flex flex-col items-center justify-center">
            <label for="username" class="text-xl font-bold text-white">Username</label>
            <input type="username" name="username" id="username" class="border-2 border-indigo-900 rounded-lg w-64 p-2" value="<%= @user["Name"]%>">
        </div>
        <div class="flex flex-col items-center justify-center my-3">
            <input type="submit" value="Update" class="bg-indigo-900 text-white rounded-lg w-64 p-2">
        </div>
        <% if session[:error] %>
            <div class="flex flex-col my-1 text-left">
                <% session[:error].each do |key, value| %>
                    <% if value %>
                        <div class="flex">
                            <img src="/icons/check.svg" alt="" >
                            <p class="text-green-500 text-left"><%= key %></p>
                        </div>
                    <% else %>
                        <div class="flex">
                            <img src="/icons/x.svg" alt="" class="red-500">
                            <p class="text-red-500"><%= key %></p>
                        </div>
                    <% end %>
                <% end %>
            </div>
        <% end %>   
    </div>
</form>
