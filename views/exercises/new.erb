<form action="/exercises/new" method="post">
  <div class="flex flex-col items-center justify-center space-y-6">
    <h1 class="text-4xl font-bold text-white mt-10">New Exercise</h1>
    <div class="flex flex-col items-center justify-center">
      <label for="name" class="text-xl font-bold text-white">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>

    <div class="flex flex-col items-center justify-center">
      <label for="difficulty" class="text-xl font-bold text-white"
        >Difficulty (int between 1-10)</label
      >
      <input
        type="number"
        id="difficulty"
        name="difficulty"
        min="1"
        max="10"
        step="1"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="instructions" class="text-xl font-bold text-white"
        >Instructions (Needs to be markdown)</label
      >
      <input
        type="file"
        id="instructions"
        name="instructions"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="instructions" class="text-xl font-bold text-white"
        >Test File (.rb file)</label
      >
      <input
        type="file"
        id="test_file"
        name="test_file"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="icon" class="text-xl font-bold text-white">Icon</label>
      <input
        type="file"
        id="icon"
        name="icon"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>
    <div class="flex flex-col items-center justify-center my-3">
      <input
        type="submit"
        class="bg-indigo-900 text-white rounded-lg w-64 p-2"
      />
    </div>
  </div>
</form>
