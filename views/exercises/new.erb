<form action="/protected/exercises" method="post" enctype="multipart/form-data">
  <div class="flex flex-col items-center justify-center space-y-6">
    <h1 class="text-4xl font-bold text-white mt-10">New Exercise</h1>
    <div class="flex flex-col items-center justify-center">
      <label for="name" class="text-xl font-bold text-white">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>

    <div class="flex flex-col items-center justify-center">
      <label for="blurb" class="text-xl font-bold text-white">Blurb</label>
      <textarea
        id="blurb"
        name="blurb"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      ></textarea>
    </div>

    <div class="flex flex-col items-center justify-center">
      <label for="difficulty" class="text-xl font-bold text-white">Difficulty (int between 1-10)</label>
      <input
        type="number"
        id="difficulty"
        name="difficulty"
        min="1"
        max="10"
        step="1"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="instructions" class="text-xl font-bold text-white">Instructions (.md file)</label>
      <input
        type="file"
        id="instructions"
        accept=".md"
        name="instructions"
        class="
          border-2 bg-white my-2 border-indigo-900 rounded-lg w-64 p-2 file:mr-4 file:py-2
          file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold
          file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100 block text-sm
          text-slate-500
        "
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="test_file" class="text-xl font-bold text-white">Test File (.rb file)</label>
      <input
        type="file"
        id="test_file"
        accept=".rb"
        name="test_file"
        class="
          border-2 bg-white my-2 border-indigo-900 rounded-lg w-64 p-2 file:mr-4 file:py-2
          file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold
          file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100 block text-sm
          text-slate-500
        "
      />
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="icon" class="text-xl font-bold text-white">Icon</label>
      <input
        type="file"
        id="icon"
        accept=".png, .jpg, .jpeg, .gif, .svg"
        name="icon"
        class="
          border-2 bg-white my-2 border-indigo-900 rounded-lg w-64 p-2 file:mr-4 file:py-2
          file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold
          file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100 block text-sm
          text-slate-500
        "
      />
    </div>
    <div class="flex flex-col items-center justify-center my-3">
      <input type="submit" class="bg-indigo-900 text-white rounded-lg w-64 p-2"/>
    </div>
  </div>
</form>
