<form action="/admin/roles/<%= @role["Id"] %>/update" method="post">
  <div class="flex flex-col items-center justify-center">
    <h1 class="text-4xl font-bold text-white m-10">Edit Role</h1>
    <div class="flex flex-col items-center justify-center">
      <label for="name" class="text-xl font-bold text-white">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
        value="<%= @role["Name"] %>"
      >
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="level" class="text-xl font-bold text-white">Level (1-5)</label>
      <input
        type="number"
        name="level"
        min="1"
        max="10"
        step="1"
        id="level"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
        value="<%= @role["Level"] %>"
      >
    </div>
    <div class="flex flex-col items-center justify-center my-3">
      <input
        type="submit"
        value="Update"
        class="bg-indigo-900 text-white rounded-lg w-64 p-2"
      >
    </div>
  </div>
</form>
