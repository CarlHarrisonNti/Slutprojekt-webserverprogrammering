<div class="p-10 text-white flex gap-5 flex-col w-5/12 m-auto">
  <h1 class="text-5xl text-center "><%= @user["Name"] %></h1>
  <div
    class="
      bg-slate-500 rounded-xl p-10 flex flex-col justify-center items-center text-3xl
      gap-10
    "
  >
    <p>
      Email:</p>
    <p class="bg-slate-600 p-3 rounded-xl"><%= @user["Email"] %></p>
    <h2>Roles</h2>
    <ul class="flex flex-col gap-2 bg-gray-600 rounded-xl list-disc px-10">
      <% @user_roles.each do |user_role| %>
        <li><%= user_role["Name"] %></li>
      <% end %>
    </ul>
  </div>
</div>
