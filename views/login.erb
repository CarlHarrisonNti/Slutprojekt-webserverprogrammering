<form action="/login" method="post">
  <div class="flex flex-col items-center justify-center">
    <h1 class="text-4xl font-bold text-white m-10">Login</h1>
    <div class="flex flex-col items-center justify-center">
      <label for="email" class="text-xl font-bold text-white">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      >
    </div>
    <div class="flex flex-col items-center justify-center">
      <label for="password" class="text-xl font-bold text-white">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="border-2 border-indigo-900 rounded-lg w-64 p-2"
      >
    </div>
    <div class="flex flex-col items-center justify-center my-3">
      <input
        type="submit"
        value="Login"
        class="bg-indigo-900 text-white rounded-lg w-64 p-2"
      >
    </div>
  </div>
</form>
