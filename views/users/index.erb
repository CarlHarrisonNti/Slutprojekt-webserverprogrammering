<div>
  <div class="flex justify-center">
    <div class="w-5/6 mx-auto">
      <div class="text-center text-white m-10">
        <h1 class="text-6xl">Users</h1>
      </div>
      <div class="grid grid-cols-1 2xl:grid-cols-2 gap-4">
        <% @users.each do |user| %>
          <section
            class="
              bg-sky-100 rounded-xl p-5 grid grid-cols-4 grid-rows-4 2xl:grid-cols-5
              hover:drop-shadow-2xl h-56
            "
          >
            <a
              class="
                row-span-4 col-span-3 2xl:col-span-4 text-center text-5xl w-full flex
                justify-center items-center h-full font-semibold place-self-center
              "
              href="/admin/users/<%= user["id"] %>"
            >
              <h2 class=""><%= user["Name"] %></h2>
            </a>
            <div class="row-span-4 col-span-1 grid grid-cols-1 grid-rows2 gap-3">
              <div
                class="
                  bg-yellow-500 flex w-full h-full align-center justify-center rounded-xl text-3xl
                "
              >
                <a
                  href="/admin/users/<%= user["id"] %>/edit"
                  class="
                    w-full h-full text-center flex justify-center items-center
                  "
                >Update</a>
              </div>
              <div
                class="
                  bg-red-600 flex w-full h-full align-center justify-center rounded-xl text-3xl
                "
              >
                <form
                  action="/admin/users/<%= user["id"] %>/delete"
                  method="post"
                  class="w-full h-full flex items-center justify-center"
                >
                  <input type="submit" value="Delete" class="w-full h-full cursor-pointer">
                </form>
              </div>
            </div>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</div>
